<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="1" author="onic">
        <comment>
            Ajout de colonne à la table "sujet" pour la collaboration.
        </comment>
        <addColumn tableName="sujet" schemaName="td">
            <column name="collaboratif" type="boolean" defaultValue="false"/>
            <column name="termine" type="boolean"/>
        </addColumn>
    </changeSet>

    <changeSet id="2" author="onic">
        <comment>
            Liste des contributeurs d'un sujet
        </comment>
        <createTable schemaName="td" tableName="sujet_contributeur">
            <column name="personne_id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="sujet_id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
        </createTable>

        <createSequence sequenceName="sujet_contributeur_id_seq" schemaName="td" startValue="1"/>

        <addForeignKeyConstraint
                baseTableSchemaName="td"
                baseTableName="sujet_contributeur"
                baseColumnNames="personne_id"
                constraintName="fk_sujet_contributeur_personne"
                referencedTableSchemaName="ent"
                referencedTableName="personne"
                referencedColumnNames="id"/>

        <addForeignKeyConstraint
                baseTableSchemaName="td"
                baseTableName="sujet_contributeur"
                baseColumnNames="sujet_id"
                constraintName="fk_sujet_contributeur_sujet"
                referencedTableSchemaName="td"
                referencedTableName="sujet"
                referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="3" author="onic">
        <comment>
            Ajout de colonne à la table "question" pour la collaboration.
        </comment>
        <addColumn tableName="question" schemaName="td">
            <column name="collaboratif" type="boolean" defaultValue="false"/>
            <column name="termine" type="boolean"/>
            <column name="sujet_lie_id" type="bigint"/>
        </addColumn>

        <addForeignKeyConstraint
                baseTableSchemaName="td"
                baseTableName="question"
                baseColumnNames="sujet_lie_id"
                constraintName="fk_questionr_sujet_lie"
                referencedTableSchemaName="td"
                referencedTableName="sujet"
                referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="4" author="onic">
        <comment>
            Liste des contributeurs d'une question
        </comment>
        <createTable schemaName="td" tableName="question_contributeur">
            <column name="personne_id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="question_id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
        </createTable>

        <createSequence sequenceName="question_contributeur_id_seq" schemaName="td" startValue="1"/>

        <addForeignKeyConstraint
                baseTableSchemaName="td"
                baseTableName="question_contributeur"
                baseColumnNames="personne_id"
                constraintName="fk_question_contributeur_personne"
                referencedTableSchemaName="ent"
                referencedTableName="personne"
                referencedColumnNames="id"/>

        <addForeignKeyConstraint
                baseTableSchemaName="td"
                baseTableName="question_contributeur"
                baseColumnNames="question_id"
                constraintName="fk_question_contributeur_question"
                referencedTableSchemaName="td"
                referencedTableName="question"
                referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>